<%- include('header.ejs') %>

    <form action="/" method="post" class="container">
        <div class="date">
            <h2>Work List</h2>
        </div>

        <div class="inputs">
            <input placeholder="Add Task" autocomplete="off" required name="task" type="text">
            <input type="submit" value="Add">
        </div>

        <% if(data.length === 0) { %>
            <h2 class="none">There is no task...</h2>
        <% } else { %>
            <% data.forEach( item => { %>
                <div class="task">
                    <input class="check" type="checkbox">
                    <label class="cross"><%= item %></label>
                </div>
            <% }) %>
        <% } %>
    </form>

</body>
</html>